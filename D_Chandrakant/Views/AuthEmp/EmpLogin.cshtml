@model D_Chandrakant.Models.AuthEmpModel
@{
    Layout = null;
    ViewData["Title"] = "EmpPage";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    
    
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/Emplogin.css">

    <link rel="stylesheet" href="/css/Datatable.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
   


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  
   




</head>
<body style="background-color:white">







    <div class="container " style="border:1px solid gray; border-radius:20px;background-color:#f4f7fe;">
        <!-- First Row for Nav -->
    

        <!-- Second Row with Two Columns -->
        <div class="row w-100">
            <div class="col-lg-6  col-md-12 text-center vh-100" id="col1">
                <!-- First Column Content -->
              
                <div class="card-body card-barcode">
                    <img src="/assets/images/Images3/logo.png" class="rounded  mx-auto d-block" id="img1">
                    <h2 id="text1">
                        <strong>
                           बारकोड
                            स्कॅन करा
                        </strong>
                    </h2>

                    <div class="card mx-auto" id="div2">
                        <img src="/assets/images/Images3/barcode.gif"id="img2" alt="Alternate Text" />

                    </div>


                </div>
            </div>
            <div class="col-lg-6 col-md-12" style="height: 100%;">
                <div style=" margin-top: 3%; margin-left: 75%;">
                    <a asp-controller="AuthAd" asp-action="AdminLogin" >Go to Admin Login</a>
                </div>
                <!-- Second Column Content -->
                @* <div class="" style="background-color:#f4f7fe;"> *@
                <div class="card-body">

                    <form asp-action="EmpLogin" asp-controller="AuthEmp" method="post">
                    <h2 style="font-size: 30px; text-align:center ;margin-top: 0%;">Employee Login</h2>
                        <h4 class="margint" style="margin-top: 5%;">Employee ID</h4>
                        <input asp-for="Id" type="text" id="Id" class="form-control mx-auto mt-3"  autocomplete="off">

                        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                        {
                            <div class="text-danger fw-bold " style="text-align:right;">@ViewData["ErrorMessage"]</div>
                        }


                        <div>
                            <table>
                                <tr>
                                    <td class="clickable-cell" data-value="1">1</td>
                                    <td class="clickable-cell" data-value="2">2</td>
                                    <td class="clickable-cell" data-value="3">3</td>
                                </tr>
                                <tr>
                                    <td class="clickable-cell" data-value="4">4</td>
                                    <td class="clickable-cell" data-value="5">5</td>
                                    <td class="clickable-cell" data-value="6">6</td>
                                </tr>
                                <tr>
                                    <td class="clickable-cell" data-value="7">7</td>
                                    <td class="clickable-cell" data-value="8">8</td>
                                    <td class="clickable-cell" data-value="9">9</td>
                                </tr>
                                <tr>
                                    <td><img id="back" src="/assets/images/Images3/backspace.png" style="height: 50px;width: 80px;"></td>
                                    <td class="clickable-cell" data-value="0
">
                                        0
                                    </td>
                                    <td><button type="submit" class="btn btn-borderless " style="font-size:50px;"> OK</button></td>
                                </tr>
                            </table>
                        </div>
                        

                    </form>
                   
            </div>


        </div>


           
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>






   






    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>




    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>



        $(document).ready(function () {
            // Get the textbox element
            var textBox = $('#Id');
            // Set focus to the textbox
            textBox.focus();
        });
       
    </script>

        <script>
            document.querySelectorAll('.clickable-cell').forEach(item => {
                item.addEventListener('click', event => {
                    const value = event.target.getAttribute('data-value');
                    const inputField = document.getElementById('Id');
                    inputField.value += value;
                });
            });
            document.getElementById('back').addEventListener('click', event => {
                const inputField = document.getElementById('Id');
                inputField.value = inputField.value.slice(0, -1);
            });
        </script>


</body>
</html>